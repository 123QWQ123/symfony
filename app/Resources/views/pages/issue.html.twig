{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="bs-example" data-example-id="hoverable-table">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Project</th>
                        <th>Tracker</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Subject</th>
                        <th>Author</th>
                        <th>Assigned</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row">{{ issue['id'] ?? '' }}</th>
                        <td>{{ issue['Project']['name'] ?? '' }}</td>
                        <td>{{ issue['tracker']['name'] ?? '' }}</td>
                        <td>{{ issue['status']['name'] ?? '' }}</td>
                        <td>{{ issue['priority']['name'] ?? '' }}</td>
                        <td>{{ issue['subject'] ?? '' }}</td>
                        <td>{{ issue['author']['name'] ?? '' }}</td>
                        <td>{{ issue['assigned_to']['name'] ?? '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <h2>Tracking Time</h2>
            {{ form_start(form_log_work) }}
            {{ form_widget(form_log_work) }}
            <input type="submit"/>
            {{ form_end(form_log_work) }}
        </div>
        <div class="row">
            <div class="container">
                <h2>Comments:</h2>
                {% for comment in comments %}
                    <hr>
                    <div class="row">
                        <span class="col-md-12" style="color: #99cdd8">Author: {{ comment.userName }}</span>
                    </div>
                    <div class="row input-group">
                        <span class="col-md-12">{{ comment.comment }}</span>
                    </div>
                    <hr>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            {{ form_start(form_comment) }}
            {{ form_widget(form_comment) }}
            <input type="submit"/>
            {{ form_end(form_comment) }}
        </div>
    </div>
{% endblock %}